<h1>New Game</h1>

<ul class=list-inline>
<% @letters.each_char do |char|  %>
<div><li> <%= p char%></li></div>
<%end%>
</ul>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="word_try">What is the longest word you can find?</label>
  <input type="text" name="word" placeholder="Type a word" id="word_try">
  <input type="submit" value="Play!">
</form>

